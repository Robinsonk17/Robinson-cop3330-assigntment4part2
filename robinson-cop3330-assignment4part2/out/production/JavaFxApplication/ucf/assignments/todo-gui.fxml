                <TitledPane animated="false" text="ToDo List #1">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="647.0">
                            <children>
                                <TabPane layoutX="65.0" layoutY="55.0" prefHeight="45.0" prefWidth="457.0" tabClosingPolicy="UNAVAILABLE" />
