                                <Button fx:id="editButton" layoutX="14.0" layoutY="142.0" mnemonicParsing="false" text="Edit Item" />
                                <Button fx:id="addButton" layoutX="281.0" layoutY="142.0" mnemonicParsing="false" text="Add Item" />
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
                <Button fx:id="addList"  layoutX="27.0" layoutY="259.0" mnemonicParsing="false" prefHeight="69.0" prefWidth="144.0" text="Add New List" />
                <Button fx:id="closeList"  layoutX="253.0" layoutY="259.0" mnemonicParsing="false" prefHeight="69.0" prefWidth="144.0" text="Close List" />
                <Button fx:id="deleteList"  layoutX="491.0" layoutY="259.0" mnemonicParsing="false" prefHeight="69.0" prefWidth="144.0" text="Delete List" />
            </children>
        </AnchorPane>
    </children>
